<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context="com.project.rushabh.buildomania.Home">


    <android.support.v7.widget.CardView
        android:id="@+id/buyCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/buyImageView"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/buyhome"
            android:contentDescription="Buy"/>

        <TextView
            android:id="@+id/buyTextView"
            android:layout_marginTop="140dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="BUY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/sellCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/sellImageView"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/sellhome"
            android:contentDescription="Buy"/>

        <TextView
            android:id="@+id/sellTextView"
            android:layout_marginTop="140dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="SELL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/RentCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/rentImageView"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/renthome"
            android:contentDescription="Buy"/>

        <TextView
            android:id="@+id/rentTextView"
            android:layout_marginTop="130dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="RENT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </android.support.v7.widget.CardView>


